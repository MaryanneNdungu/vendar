<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/cardview_light_background</item>
        <item name="colorControlActivated">@color/cardview_light_background</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="TextLabel" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
    </style>


    <style name="MaterialLoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>
    <style name="MaterialLoginTheme.SelectableItemTheme">
        <item name="colorControlHighlight">@color/material_login_register_color</item>
    </style>
    <style name="MaterialLoginTheme.SelectableItemBackground">
        <item name="android:theme">@style/MaterialLoginTheme.SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceRegister">
        <item name="android:textColor">@color/material_login_login_color</item>
        <item name="colorControlNormal">@color/material_login_login_color</item>
        <item name="android:textColorHint">@color/material_login_login_color</item>
        <item name="colorControlActivated">@color/material_login_login_color</item>
        <item name="colorControlHighlight">@color/material_login_login_color</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/material_login_register_color</item>
        <item name="colorControlNormal">@color/material_login_register_color</item>
        <item name="android:textColorHint">@color/material_login_register_color</item>
        <item name="colorControlActivated">@color/material_login_register_color</item>
        <item name="colorControlHighlight">@color/material_login_register_color</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLoginError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceRegisterError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_register_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>


    <!-- Camera Themes. -->
    <style name="squarecamera__CameraFullScreenTheme" parent="squarecamera__CameraFullScreenTheme.Base"></style>
    <style name="squarecamera__CameraFullScreenTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="squarecamera__CameraFullScreenTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="squarecamera__CameraFullScreenTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="squarecamera__CameraFullScreenTheme.NoUI" parent="squarecamera__CameraFullScreenTheme.Base">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
</resources>
